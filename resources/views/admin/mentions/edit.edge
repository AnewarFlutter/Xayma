<div class="modal fade" id="ModalEdit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Modifier la mention</h5>
            </div>
            <div class="modal-body">
                <form action="{{ route('mentions.update') }}" data-toggle="validator" role="form"
                    method="POST" enctype="multipart/form-data">
                    {{ csrfField() }}
                    <input type="hidden" name="_method" value="PUT">
                    
                    <div class="container">
                        <div class="row">
                            <div class="col-sm">
                                <label class="form-label">Nom de la mention<span class="text-danger">*</span></label>
                                <div class="input-group input-group-outline mb-3">
                                    <input 
                                        type="text"
                                        class="form-control"
                                        id="name"
                                        name="name"
                                        required
                                    />
                                    <input type="hidden" id="id" name="id" />
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i>Annuler</button>
                <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i>Enregistrer</button>
            </div>
            </form>
        </div>
    </div>
</div>
